{
	"name": "lsp-sample",
	"displayName": "lsp-sample",
	"description": "Language Server Sample Extension",
	"version": "0.0.1",
	"author": "{Your name}",
	"publisher": "{Your_outlook_name}",
	"license": "SEE LICENSE IN LICENSE",
	"galleryBanner": {
		"color": "#FFFFFF",
		"theme": "light"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Ikuyadeu/vscode-language-server-template"
	},
	"bugs": {
		"url": "https://github.com/Ikuyadeu/vscode-language-server-template/issues"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Linters",
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:plaintext",
		"onLanguage:markdown"
	],
	"main": "./client/out/extension",
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"compile": "tsc -b",
		"compile:client": "tsc -b ./client/tsconfig.json",
		"compile:server": "tsc -b ./server/tsconfig.json",
		"watch": "tsc -b -w",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/node": "^14.14.10",
		"merge-options": "^3.0.4",
		"rimraf": "^3.0.2",
		"ts-loader": "^8.0.11",
		"typescript": "^4.1.2",
		"webpack": "^5.9.0",
		"webpack-cli": "^4.2.0",
		"eslint": "^7.14.0"
	}
}
